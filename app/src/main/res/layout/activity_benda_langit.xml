<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".sains.alam.BendaLangitActivity">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="500dp"
        android:scaleType="fitStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_benda_langit" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="40dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/btn_bintang"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:src="@drawable/btn_bintang"
            />

        <ImageView
            android:id="@+id/btn_bulan"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="80dp"
            android:layout_gravity="start"
            android:src="@drawable/btn_bulan"
            />

        <ImageView
            android:id="@+id/btn_matahari"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="130dp"
            android:layout_gravity="start"
            android:src="@drawable/btn_matahari"
            />

        <ImageView
            android:id="@+id/btn_awan"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="180dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="start"
            android:src="@drawable/btn_awan"
            />

        <ImageView
            android:id="@+id/btn_pelangi"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="140dp"
            android:layout_gravity="start"
            android:src="@drawable/btn_pelangi"
            />

        <ImageView
            android:id="@+id/btn_komet"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="90dp"
            android:layout_gravity="start"
            android:src="@drawable/btn_komet"
            />

        <ImageView
            android:id="@+id/btn_planet"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="start"
            android:src="@drawable/btn_planet"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintVertical_bias="0.479" />

</androidx.constraintlayout.widget.ConstraintLayout>